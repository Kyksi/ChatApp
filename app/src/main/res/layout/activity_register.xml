<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <include android:id="@+id/toolbar" layout="@layout/bar_layuot" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_a_new_account"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:drawableLeft="@drawable/ic_user_img"
            android:layout_marginTop="10dp"
            app:met_floatingLabel="normal"
            android:hint="@string/username"
            android:paddingLeft="15dp"
            android:drawableStart="@drawable/ic_user_img"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            app:met_floatingLabel="normal"
            android:drawableLeft="@drawable/ic_email_img"
            android:hint="@string/email"
            android:paddingLeft="15dp"
            android:drawableStart="@drawable/ic_email_img"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            app:met_floatingLabel="normal"
            android:drawableLeft="@drawable/ic_passwd_img"
            android:hint="@string/password"
            android:paddingLeft="15dp"
            android:drawableStart="@drawable/ic_passwd_img"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:text="@string/register"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

</RelativeLayout>